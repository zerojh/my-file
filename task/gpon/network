
config interface 'loopback'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'
	option ula_prefix 'fdca:5f92:f802::/48'

config interface 'lan'
	option ifname 'eth0'
	option force_link '1'
	option type 'bridge'
	option proto 'static'
	option ipaddr '192.168.11.1'
	option netmask '255.255.255.0'
	option ip6assign '60'
	option disabled '0'

# GPON special interface for connecting ONU
config interface 'gpon'
        option ifname 'eth1.2012'
        option force_link '1'
        option proto 'static'
        option ipaddr '10.251.251.251'
        option netmask '255.255.255.0'
        option metric '12'
	option disabled '1'

config interface 'wan'
	option ifname 'eth1'
	option force_link '1'
	option proto 'dhcp'
	option metric '10'
	option wan_switch 'on'

config interface 'wan2'
        option ifname 'ppp0'
        option disabled '1'
	option userdisabled '0'
        option proto '3g'
        option device '/dev/ttyUSB3'
        option apn 'cmnet'
        option dialnumber '*99#'
        option service 'umts'
        option metric '20'

# VLAN switch0
config switch 'switch0'
	option enable_vlan '1'
	option reset '1'

